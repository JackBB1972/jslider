{# https://bxslider.com/options/ #}
<div class="module">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
    <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>

    <div>
        {% if name and display_title %}
            {% if add_span %}
                <h3 class="{{ hclass }}"><span>{{ name }}</span></h3>
            {% else %}
                <h3>{{ name }}</h3>
            {% endif %}
        {% endif %}


        <div class="slider">
            {% for banner in banners %}
                <div><img alt="{{ banner.title }}" title="{{ banner.title }}" src="{{ banner.image }}"></div>
            {% endfor %}
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $('.slider').bxSlider({
                auto: 'true',
                mode: '{{ slmode }}',
                captions: 'true',
                speed: {{ valueR }},
                pager: {{ navi }},
                controls: {{ navi }},
                captions: {{ capt }}
            });
        });
    </script>
</div>
